{
  "name": "react-library-boilerplate",
  "author": "Jeffrey Bernadas",
  "version": "0.0.1",
  "description": "A boilerplate to get your very own React Component Library up and running using Rollup, Typescript, Jest, React Testing, Storybook",
  "license": "MIT",
  "main": "build/index.cjs.js",
  "module": "build/index.esm.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "rollup -c rollup.config.mjs",
    "build:types": "tsc -p tsconfig.build.json",
    "test:clean": "rimraf ./coverage",
    "test:init": "react-scripts test",
    "test": "npm run test:init -- --coverage --watchAll",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "sideEffects": false,
  "types": "build/typings/index.d.ts",
  "peerDependencies": {
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bernz322/react-library-boilerplate"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.11.15",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-image": "^3.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "babel-loader": "^8.3.0",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-docgen-typescript-plugin": "^1.0.5",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "rollup": "^3.20.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.0"
  }
}
